<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="RestWave.Views.SaveRequestDialog"
        Title="Save Request"
        Width="400" Height="200">
    <StackPanel Margin="20">
        <TextBlock Text="Enter Request Name" Margin="0,0,0,10" FontWeight="Bold"/>
        <TextBox x:Name="RequestNameTextBox" Watermark="Enter request name..." Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Cancel" Width="80" Margin="0,0,10,0" Click="OnCancelClick"/>
            <Button Content="Save" Width="80" Click="OnSaveClick"/>
        </StackPanel>
    </StackPanel>
</Window>
