<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		x:Class="RestWave.Views.HistoryWindow"
		Width="800" Height="600"
		Title="Request History">
	<DockPanel>
		<TextBlock DockPanel.Dock="Top" Classes="SectionHeader" Text="All Requests History" Margin="12" />
		<ListBox Name="HistoryList" Margin="12">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel>
						<TextBlock Text="{Binding Method}" FontWeight="Bold" />
						<TextBlock Text="{Binding Url}" TextTrimming="CharacterEllipsis" />
						<TextBlock Text="{Binding StatusCode}" />
						<TextBlock Text="{Binding Timestamp}" />
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</DockPanel>
</Window>

