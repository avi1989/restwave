<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:responses="clr-namespace:RestWave.ViewModels.Responses"
             xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RestWave.Views.Response.SimpleResponseControl"
             x:DataType="responses:ResponseViewModel">
    <DockPanel>
        <Border DockPanel.Dock="Top"
                Background="{DynamicResource WarningBackground}"
                BorderBrush="{DynamicResource WarningBorder}"
                BorderThickness="0,0,0,1"
                Padding="8,6"
                IsVisible="{Binding IsTruncated}">
            <TextBlock Text="{Binding TruncationMessage}"
                       Foreground="{DynamicResource WarningText}"
                       FontSize="12" />
        </Border>
        <avaloniaEdit:TextEditor
            x:Name="ResponseEditor"
            Document="{Binding BodyDocument}"
            FontFamily="Cascadia Code,Consolas,Menlo,Monospace"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            MinHeight="200"
            WordWrap="True"
            IsReadOnly="false"
            SyntaxHighlighting="JavaScript"
            ShowLineNumbers="False" />
    </DockPanel>
</UserControl>
