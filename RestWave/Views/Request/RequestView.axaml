<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:RestWave.ViewModels"
             xmlns:requests="clr-namespace:RestWave.ViewModels.Requests"
             xmlns:request="clr-namespace:RestWave.Views.Request"
             xmlns:request1="clr-namespace:RestWave.Views.Request"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RestWave.Views.Request.RequestView"
             x:DataType="requests:RequestViewModel">
    <Design.DataContext>
        <requests:RequestViewModel />
    </Design.DataContext>

    <DockPanel>
        <TextBlock Classes="SectionHeader" Text="Request" DockPanel.Dock="Top" />
        <TabControl Classes="Modern">
            <TabItem Header="Headers">
                <request1:HeadersInput DataContext="{Binding HeadersInput}"/>
            </TabItem>
            <TabItem Header="Body" IsEnabled="{Binding IsBodyEnabled}">
                <request1:BodyInput DataContext="{Binding JsonBodyInput}"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>