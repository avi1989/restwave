<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RestWave.App"
             xmlns:local="using:RestWave"
             RequestedThemeVariant="Default">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem Header="New" />
            <NativeMenuItem Header="Open" />
            <NativeMenuItem Header="Save" />
            <NativeMenuItem Header="Exit" />
        </NativeMenu>
    </NativeMenu.Menu>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml"/>
        <!-- Include external style files -->
        <StyleInclude Source="/Styles/ButtonStyles.axaml"/>
        <StyleInclude Source="/Styles/AppTheme.axaml"/>
        
    </Application.Styles>
</Application>