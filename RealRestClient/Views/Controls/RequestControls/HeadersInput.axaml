<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:RealRestClient.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:HeadersInputViewModel"
             x:Class="RealRestClient.Views.Controls.RequestControls.HeadersInput">

    <Design.DataContext>
        <vm:HeadersInputViewModel />
    </Design.DataContext>

    <DockPanel>
        <Grid RowDefinitions="Auto,Auto">
            <!-- Table Header Row and Body -->
            <StackPanel Orientation="Vertical" Grid.Row="0">
                <Grid ColumnDefinitions="1*,1*,Auto" Margin="0,0,0,4">
                    <Border BorderBrush="#DDD" BorderThickness="1,1,0,1" Grid.Column="0">
                        <TextBlock Text="Header Name" FontWeight="Bold" Padding="8,4"/>
                    </Border>
                    <Border BorderBrush="#DDD" BorderThickness="0,1,0,1" Grid.Column="1">
                        <TextBlock Text="Value" FontWeight="Bold" Padding="8,4"/>
                    </Border>
                    <Border BorderBrush="#DDD" BorderThickness="0,1,1,1"  Grid.Column="2">
                        <TextBlock Text="X" FontWeight="Bold" Padding="8,4" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
                <ItemsControl ItemsSource="{Binding Headers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:HttpHeaderItemViewModel}">
                            <Grid ColumnDefinitions="1*,1*,Auto" Margin="0,0,0,0">
                                <Border BorderBrush="#DDD" BorderThickness="1,0,0,1" Grid.Column="0">
                                    <TextBox Margin="0"
                                             Watermark="Header Name"
                                             Text="{Binding Key}"
                                             Padding="8,4"
                                             BorderThickness="0"
                                             Background="Transparent"/>
                                </Border>
                                <Border BorderBrush="#DDD" BorderThickness="0,0,1,1" Grid.Column="1">
                                    <TextBox Margin="0"
                                             Watermark="Value"
                                             Text="{Binding Value}"
                                             Padding="8,4"
                                             BorderThickness="0"
                                             Background="Transparent"/>
                                </Border>
                                <Border BorderBrush="#DDD" BorderThickness="0,0,1,1" Grid.Column="2">
                                    <Button Content="X"
                                            Click="RemoveHeader_Click"
                                            Margin="4,0,0,0"
                                            Padding="4,2"
                                            BorderThickness="0"
                                            Background="Transparent"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <!-- Add Header Button -->
            <Button Classes="Hyperlink"
                    Content="+ Add Header"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0"
                    Click="AddHeader_Click"
                    Grid.Row="1"/>
        </Grid>
    </DockPanel>
</UserControl>
