<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avaloniaedit="using:AvaloniaEdit"
             xmlns:vm="clr-namespace:RealRestClient.ViewModels"
             xmlns:requests="clr-namespace:RealRestClient.ViewModels.Requests"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RealRestClient.Views.Request.BodyInput"
             x:DataType="requests:JsonBodyInputViewModel">
    <Design.DataContext>
        <requests:JsonBodyInputViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <avaloniaedit:TextEditor
            Grid.Row="1"
            Name="JsonEditor"
            FontFamily="Cascadia Code,Consolas,Menlo,Monospace"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            MinHeight="200"
            ShowLineNumbers="True">
        </avaloniaedit:TextEditor>

        <Border Grid.Row="2"
                BorderBrush="{DynamicResource SystemControlErrorTextForegroundBrush}"
                BorderThickness="1"
                CornerRadius="3"
                Padding="8"
                Margin="0,5,0,0"
                IsVisible="{Binding HasValidationError}">
            <TextBlock Text="{Binding ValidationError}"
                       Foreground="{DynamicResource SystemControlErrorTextForegroundBrush}"
                       TextWrapping="Wrap" />
        </Border>
    </Grid>
</UserControl>