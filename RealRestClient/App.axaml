<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RealRestClient.App"
             xmlns:local="using:RealRestClient"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem Header="New" />
            <NativeMenuItem Header="Open" />
            <NativeMenuItem Header="Save" />
            <NativeMenuItem Header="Exit" />
        </NativeMenu>
    </NativeMenu.Menu>

    <Application.Styles>
        <FluentTheme />
        <!-- Include external style files -->
        <StyleInclude Source="/Styles/ButtonStyles.axaml"/>
    </Application.Styles>
</Application>